<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.niehaus.StarterController">
    <top>
        <Text id="welcome-text" text="Welcome" BorderPane.alignment="TOP_CENTER" />
    </top>

    <center>
        <VBox alignment="CENTER">
            <Button alignment="CENTER" onAction="#handleLoadButtonAction" text="Load Bank Statement" />
            <Text fx:id="loadactiontarget">
            <VBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin></Text>
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
        </VBox>
    </center>

    <bottom>
        <Button fx:id="startButton" onAction="#handleStartButtonAction" text="Start" BorderPane.alignment="BOTTOM_RIGHT" />
    </bottom>

    <stylesheets>
        <URL value="@Login.css" />
    </stylesheets>
   <padding>
      <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
   </padding>

</BorderPane>
